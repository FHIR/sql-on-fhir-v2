{
  "title": "where",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "name": [
        {
          "use": "official",
          "family": "f1"
        }
      ]
    },
    {
      "resourceType": "Patient",
      "id": "p2",
      "name": [
        {
          "use": "nickname",
          "family": "f2"
        }
      ]
    },
    {
      "resourceType": "Patient",
      "id": "p3",
      "name": [
        {
          "use": "nickname",
          "given": ["g3"],
          "family": "f3"
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "top level where",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "id" }],
        "where": [{ "path": "name.use = 'official'" }]
      },
      "expect": [{ "id": "p1" }]
    },
    {
      "title": "multiple top level where paths",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "id" }],
        "where": [
          { "path": "name.use = 'official'" },
          { "path": "name.family = 'f1'" }
        ]
      },
      "expect": [{ "id": "p1" }]
    },
    {
      "title": "top level where path with a where function (and)",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "id" }],
        "where": [{ "path": "name.where(use = 'official' and family='f1')" }]
      },
      "expect": [{ "id": "p1" }]
    },
    {
      "title": "top level where path with a where function (or)",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "id" }],
        "where": [{ "path": "name.where(use='official' or family='f2')" }]
      },
      "expect": [{ "id": "p1" }, { "id": "p2" }]
    },
    {
      "title": "where in select path",
      "view": {
        "resource": "Patient",
        "select": [
          { "path": "id" },
          { "path": "name.where(use='nickname').family" }
        ]
      },
      "expect": [
        { "id": "p1", "family": null },
        { "id": "p2", "family": "f2" },
        { "id": "p3", "family": "f3" }
      ]
    },
    {
      "title": "where in forEach expression",
      "view": {
        "resource": "Patient",
        "select": [
          { "path": "id" },
          {
            "forEach": "name.where(use='nickname')",
            "select": [{ "path": "family" }]
          }
        ]
      },
      "expect": [
        { "id": "p2", "family": "f2" },
        { "id": "p3", "family": "f3" }
      ]
    }
  ]
}
