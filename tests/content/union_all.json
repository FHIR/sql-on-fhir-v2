{
  "title": "unionAll",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "name": [
        {
          "use": "official",
          "family": "f1"
        }
      ],
      "contact": [
        {
          "name": { "family": "f2" }
        },
        {
          "name": { "family": "f3" }
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "unionAll of names",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "unionAll": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [{ "family": "f1" }, { "family": "f2" }, { "family": "f3" }]
    },
    {
      "title": "unionAll with different internal column names",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "unionAll": [
              {
                "forEach": "name",
                "column": [
                  { "path": "family", "name": "a" },
                  { "path": "{}", "name": "b" }
                ]
              },
              {
                "forEach": "contact.name",
                "column": [
                  { "path": "{}", "name": "a" },
                  { "path": "family", "name": "b" }
                ]
              }
            ]
          }
        ]
      },
      "expect": [
        { "a": "f1", "b": null },
        { "a": null, "b": "f2" },
        { "a": null, "b": "f3" }
      ]
    },
    {
      "title": "unionAll with mismatching branches",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "unionAll": [
              {
                "column": [{ "path": "'a'", "name": "a" }]
              },
              {
                "column": [{ "path": "'b'", "name": "b" }]
              }
            ]
          }
        ]
      },
      "expectError": true
    },
    {
      "title": "unionAll with forEachOrNull",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEachOrNull": "address.where(id = 'never-match')",
            "unionAll": [
              {
                "column": [{ "path": "'a'", "name": "letter" }]
              },
              {
                "column": [{ "path": "'b'", "name": "letter" }]
              }
            ]
          }
        ]
      },
      "expect": [{ "letter": null }]
    },
    {
      "title": "unionAll of names with column",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [{ "path": "'x'", "name": "common" }],
            "unionAll": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [
        { "common": "x", "family": "f1" },
        { "common": "x", "family": "f2" },
        { "common": "x", "family": "f3" }
      ]
    },
    {
      "title": "unionAll of names with column and select",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [{ "path": "'x'", "name": "commonx" }],
            "select": [
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "c_family" }]
              }
            ],
            "unionAll": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "p_family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "p_family" }]
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f1"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f1"
        },
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f2"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f2"
        },
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f3"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f3"
        }
      ]
    },
    {
      "title": "nested unionAll",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "unionAll": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "unionAll": [
                  {
                    "forEach": "name",
                    "column": [{ "path": "family", "name": "family" }]
                  },
                  {
                    "forEach": "contact.name",
                    "column": [{ "path": "family", "name": "family" }]
                  }
                ]
              }
            ]
          }
        ]
      },
      "expect": [{ "family": "f1" }, { "family": "f1" }, { "family": "f2" }, { "family": "f3" }]
    },
    {
      "title": "unionAll with one empty operand",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "unionAll": [
              {
                "forEach": "name.where(false)",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [{ "family": "f2" }, { "family": "f3" }]
    },
    {
      "title": "unionAll with empty result",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              }
            ],
            "unionAll": [
              {
                "forEach": "{}",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": []
    },
    {
      "title": "unionAll with empty result and forEachOrNull",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              }
            ],
            "unionAll": [
              {
                "forEachOrNull": "{}",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEachOrNull": "{}",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [{"id": "p1", "family": null},{"id": "p1", "family": null}]
    }
  ]
}
