{
	"title": "unsupported fhirpath functionality",
	"desc": "fhirpath syntax outside not in the spec subset should return an error",
	"resources": [
	  {
		"resourceType": "Patient",
		"id": "p1",
		"name": [
		  {
			"use": "official",
			"given": ["g1", "g2"],
			"family": "f1"
		  }
		]
	  }
	],
	"tests": [
	  {
		"title": "index expression",
		"view": {
		  "resource": "Patient",
		  "select": [
			{ "path": "name[0].use" }
		  ]
		},
		"expectError": true
	  },
	  {
		"title": "unsupported function",
		"view": {
		  "resource": "Patient",
		  "select": [
			{ "path": "name.last().use" }
		  ]
		},
		"expectError": true
	  },
	  {
		"title": "unsupported operator",
		"view": {
		  "resource": "Patient",
		  "select": [
			{ "path": "'a' & 'b'" }
		  ]
		},
		"expectError": true
	  }
	]
} 