{
  "title": "first()",
  "resources": [
    {
      "resourceType": "Patient",
      "name": [
        {
          "use": "official",
          "family": "f1",
          "given": ["g1.1", "g1.2"],
          "prefix": []
        },
        {
          "use": "usual",
          "given": ["g2.1"]
        },
        {
          "use": "maiden",
          "family": "f3",
          "given": ["g3.1", "g3.2"],
          "period": { "end": "2002" }
        }
      ],
      "identifier": []
    }
  ],
  "tests": [
    {
      "title": "table level first()",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "name.first().use" }]
      },
      "expect": [{ "use": "official" }]
    },
    {
      "title": "table and field level first()",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "path": "name.first().given.first()",
            "name": "given"
          }
        ]
      },
      "expect": [{ "given": "g1.1" }]
    },
    {
      "title": "table level first() when empty",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "identifier.first()" }]
      },
      "expect": []
    },
    {
      "title": "table level and field first() when empty",
      "view": {
        "resource": "Patient",
        "select": [{ "path": "name.first().prefix.first()" }]
      },
      "expect": []
    }
  ]
}
