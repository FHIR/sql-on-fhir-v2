{
  "$id": "http://hl7.org/fhir/uv/sql-on-fhir/tests",
  "title": "SQL on FHIR Tests Schema",
  "description": "Schema for tests",
  "type": "object",
  "required": ["title", "resources", "tests"],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "generated": {
      "type": "boolean"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "view", "expect"],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "view": {
            "$ref": "#/$defs/view"
          },
          "expect": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "_item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "select": {
          "type": "array",
          "items": { "$ref": "#/$defs/_item" }
        },
        "path": {
          "type": "string"
        },
        "alias": {
          "type": "string"
        },
        "collection": {
          "type": "boolean"
        },
        "from": {
          "type": "string"
        },
        "forEach": {
          "type": "string"
        },
        "forEachOrNull": {
          "type": "string"
        },
        "union": {
          "type": "array",
          "items": { "type": "object" }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "view": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "resource": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "select": {
          "type": "array",
          "items": { "$ref": "#/$defs/_item" }
        },
        "where": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path"],
            "properties": {
              "path": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
