{
  "$id": "https://sql-on-fhir.org/ig/test-report",
  "title": "SQL on FHIR test report schema",
  "description": "Standard format for JSON test reports generated by SQL on FHIR view runners.",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "tests": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "result": {
                "type": "object",
                "properties": {
                  "passed": {
                    "type": "boolean"
                  }
                },
                "required": ["passed"]
              }
            },
            "required": ["name", "result"]
          }
        }
      },
      "required": ["tests"]
    }
  }
}
