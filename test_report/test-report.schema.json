{
  "$id": "https://sql-on-fhir.org/ig/test-report",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SQL on FHIR test report schema",
  "description": "Standard format for JSON test reports generated by SQL on FHIR view runners. The report should be a flat object where each key represents a test suite file (e.g., 'basic.json', 'common.json') and contains an array of test results.",
  "type": "object",
  "patternProperties": {
    ".*": {
      "description": "Each property represents a test suite file (e.g., 'basic.json', 'common.json', 'fn_math.json').",
      "type": "object",
      "properties": {
        "tests": {
          "description": "Array of test cases within this test suite.",
          "type": "array",
          "items": {
            "description": "Individual test case result.",
            "type": "object",
            "properties": {
              "name": {
                "description": "The name/description of the test case.",
                "type": "string",
                "examples": ["basic attribute", "Common: simple attribute #1", "Math: division and casting"]
              },
              "result": {
                "description": "The test execution result.",
                "type": "object",
                "properties": {
                  "passed": {
                    "description": "Whether the test passed (true) or failed (false).",
                    "type": "boolean"
                  },
                  "error": {
                    "description": "Optional error message if the test failed.",
                    "type": "string"
                  },
                  "details": {
                    "description": "Optional additional details about the test result.",
                    "type": "object"
                  }
                },
                "required": ["passed"]
              }
            },
            "required": ["name", "result"]
          },
          "minItems": 1
        }
      },
      "required": ["tests"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "basic.json": {
        "tests": [
          {
            "name": "basic attribute",
            "result": {
              "passed": true
            }
          },
          {
            "name": "basic choice type column",
            "result": {
              "passed": false,
              "error": "Expected column 'choice' but got 'choice_type'"
            }
          }
        ]
      },
      "common.json": {
        "tests": [
          {
            "name": "Common: simple attribute #1",
            "result": {
              "passed": true
            }
          }
        ]
      }
    }
  ]
}
